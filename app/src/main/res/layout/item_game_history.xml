<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/hangman_field_background_night"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Result Indicator -->
        <View
            android:id="@+id/view_result_indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@color/hangman_used_correct"/>

        <!-- Game Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_game_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXAMPLE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_game_attempts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 attempts (2 wrong)"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:alpha="0.7"/>

            <TextView
                android:id="@+id/tv_game_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nov 08, 2025 14:30"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:alpha="0.5"/>

        </LinearLayout>

        <!-- Result -->
        <TextView
            android:id="@+id/tv_game_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WIN"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textColor="@color/hangman_used_correct"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
